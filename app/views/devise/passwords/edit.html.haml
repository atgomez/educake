.center-form
  %h4.brown= t("devise.password.change_password_title")
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), 
                    :html => { :method => :put, :class => 'form-horizontal' }, :validate => true) do |f|
    - if notification = f.error_notification
      .alert.alert-error.fade.in
        %a{:class => "close", 'data-dismiss' => "alert", :href => "#"} &times;
        = notification
    = f.input :reset_password_token, :as => :hidden
    = f.full_error :reset_password_token
    .form-inputs
      = f.input :password, :label => t("common.new_password"), :required => true
      = f.input :password_confirmation, :label => t("common.confirm_password"), :required => true
    .form-actions
      = f.button :submit, t("devise.change_password_action")
  = render "devise/shared/links"

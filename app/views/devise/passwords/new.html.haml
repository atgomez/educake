.center-form
  %h4.brown Forgot your password?
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f|
    - if notification = f.error_notification
      .alert.alert-error.fade.in
        %a{:class => "close", 'data-dismiss' => "alert", :href => "#"} &times;
        = notification
    .form-inputs
      = f.input :email, :required => true
    .form-actions
      = f.button :submit, "Send me reset password instructions", :class => 'btn btn-primary'
      Or
      = render "devise/shared/links"

.center-form
  %h4.brown Please change your password
  = simple_form_for(resource, :as => resource_name, 
        :url => update_user_confirmation_path(params[:confirmation_token]), 
        :html => { :method => :put, :class => 'form-horizontal' }) do |f|
    - if notification = f.error_notification
      .alert.alert-error.fade.in
        %a{:class => "close", 'data-dismiss' => "alert", :href => "#"} &times;
        = notification
    .form-inputs
      = f.input :password, :label => "Password", :required => true
      = f.input :password_confirmation, :label => "Confirm password", :required => true
      = hidden_field_tag :confirmation_token, @confirmation_token
    .form-actions
      = f.button :submit, "Change my password"
  = render "devise/shared/links"

.center-form
  %h4.brown= t("devise.confirmation.change_password_title")
  = simple_form_for(resource, :as => resource_name, 
        :url => update_user_confirmation_path(params[:confirmation_token]), 
        :html => { :method => :put, :class => 'form-horizontal' }) do |f|
    - if notification = f.error_notification
      .alert.alert-error.fade.in
        %a{:class => "close", 'data-dismiss' => "alert", :href => "#"} &times;
        = notification
    .form-inputs
      = f.input :password, :label => t("common.password"), :required => true
      = f.input :password_confirmation, :label => t("common.confirm_password"), :required => true
      = hidden_field_tag :confirmation_token, @confirmation_token
    .form-actions
      = f.button :submit, t("devise.change_password_action")
  = render "devise/shared/links"

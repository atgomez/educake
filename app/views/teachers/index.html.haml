.teacher.pull-left
  = link_to 'Add Student', new_student_path, :class => 'btn'
  - unless @students.blank?
    - @students.each do |student|
      - student_home_url = student_path(student)
      .student-container.clearfix
        .avatar-container.well
          %a{:href => student_home_url}
            - unless student.photo_url.blank?
              = image_tag(student.photo_url, :class => "student-avatar")
            - else
              .default-avatar

        .info.well
          %strong.name
            = link_to(student.full_name, student_home_url)

          .birthday
            %span= "Born on:"
            %span= student.birthday_string
          .gender
            %span= "Gender:"
            %span= student.gender_string

    = render_pagination @students
.show-other-students.pull-right
  - unless @sharing_students.empty?
    %div View sharing students 
    - @sharing_students.each do |student|
      .student-container.clearfix
        .avatar-container.well
          - unless student.photo_url.blank?
            = image_tag(student.photo_url, :class => "student-avatar")
          - else
            .default-avatar
        .info.well.pull-left
          .pull-left
            %strong.name
              = link_to(student.full_name, student_path(student))
            .birthday
              %span= "Born on:"
              %span= student.birthday_string
            .gender
              %span= "Gender:"
              %span= student.gender_string
    = #render_pagination @sharing_students

- if @sharing.errors.any?
  $("#render_invite_user").html("#{escape_javascript render :partial => 'form', :locals => {:url => invitation_path(@sharing), :method => :put}}");
  $("#render_invite_user").on('shown', function(){$('.invitation-form').enableClientSideValidations();});
  $("#render_invite_user").modal('show');
- else
  location.reload()

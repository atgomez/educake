.admin.teacher
  .show-student  
    .clearfix.toolbar
      = link_to "All Teachers", admin_teachers_path, :class => "brown font18"
      = render 'shared/search_box', :action => "/admin/teachers/search", :placeholder => "Search name"

    = render('teacher_box')
            
  .clearfix.toolbar
    = link_to "View chart", admin_teacher_path(@teacher),  :class => "brown font18"
  - unless @students.blank?
    = render('shared/students/list', :with_pagination => false, :students => @students, :user => @teacher)

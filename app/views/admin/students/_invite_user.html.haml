#invite_user.modal.hide.fade
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
    %h4 Add a user
  .modal-body
    - user = StudentSharing.new
    = simple_form_for(user, :url => teachers_path) do |f|
      = f.error_notification
      .form-inputs
        = f.input :name
        = f.input :email
        = f.input :role_id, :as => :select, :collection => []
        = f.hidden_field :student_id, :value => current_user.id
  .modal-footer
    %a.btn{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Cancel
    %a.btn.btn-primary{:href => "#"} Save

= link_to "Add School", new_super_admin_school_path, :class => "btn"
- unless @schools.empty?
  = link_to "Add User", new_super_admin_user_path, :class => "btn"
= render('/admin/teachers/search_box')

%table.table.table-striped.schools
  %thead
    %tr
      %th= sortable "name", "School"
      %th= sortable "Admin"
      %th= sortable "Teachers"
      %th= sortable "Students"
      %th= sortable "Joined"
  %tbody
    - @schools.each do |school|
      - admin = school.users.admins.first
      - teachers = school.users.teachers
      - students = []
      - teachers.map do |teacher|
        students =+ teacher.students
      %tr
        %td= school.name
        %td= admin.full_name
        %td= teachers.count 
        %td= students.count
        %td= school.created_at.strftime("%m/%d/%y")
= render_pagination @schools 


- id ||= 'add_status'
.modal.hide.fade{:tabindex => "-1", :id => id}
  = simple_form_for(@status, :url => add_status_goals_path, :method => :post, :remote => true, :html => {:class => "status-form"}) do |f|
    .modal-header
      %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
      %h4 Add grade 
    .modal-body
      - if notification = f.error_notification
        .alert.alert-error.fade.in
          %a{:class => "close", 'data-dismiss' => "alert", :href => "#"} &times;
          = notification
      .form-inputs
        = f.input :goal_id, :collection => @goals, :prompt => "Select one", :input_html => {:class => "pull-left"}
        .clearfix
        = f.input(:due_date, :as => :string, :input_html => {:class => "select-date pull-left", :value => @status.due_date_string}, :label => "Due Date")
        .clearfix
        = f.input :accuracy, :label => "% Accuracy", :input_html => {:class => "pull-left"}
        .clearfix
        = f.input :time_to_complete, :as => :string, :ampm => true
        = f.hidden_field :is_ideal, :value => false
        = f.hidden_field :user_id, :value => current_user.id
        .clearfix
      .modal-footer
        %a.btn{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Cancel
        = f.submit "Save", :class => "btn btn-primary", :id => "save-user"

.student
  %h3= t("student.edit")
  #error_edit_student
  #render_invite_user.modal.hide.fade
  %center= render 'shared/students/form'
  .clearfix
  .goal-section.grade    
    .tabbable      
      .grade.goal-container
        = link_to(" " + t("goal.add"), new_goal_path(:student_id => @student.id), :remote => true,
                    :class => "icon-plus-sign", :id => "add-goal")
        #content-grade.clearfix
          = render(:partial => "shared/students/view_goal", :locals => {:goals => @goals, :student => @student})
    #new-goal-container
  .invited-user
    .tabbable      
      .grade
        = link_to(" " + t("invitation.new_title"), new_invitation_path(:user_id => @user.id), 
                  :remote => true, :class => "icon-plus-sign add")
        = render "shared/students/view_invited_user", :invited_users => @student.sharings
        

%h3 Editing student
#error_edit_student
#render_invite_user
%center= render 'form'
.clearfix
.invited-user.status 
  = link_to(" Add a goal", "#", :class => "icon-plus-sign", :id => "add-goal")
  = render(:partial => "view_goal", :locals => {:goals => @goals})
  = render(:partial => "goals/form", :locals => {:student => @student})
.invited-user
  = link_to " Add a user", new_invitation_path, :remote => true, :class => "icon-plus-sign add"
  = render "view_invited_user", :invited_users => @student.sharings

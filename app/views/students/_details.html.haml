.show-student
  .one-student.clearfix
    .avatar-container.thumbnail
      = image_tag(@student.photo_url, :class => "student-avatar")
      
    .info.well.pull-left
      .pull-left
        %strong.name
          = @student.full_name
        .birthday
          %span= "Born on:"
          %span= @student.birthday_string
        .gender
          %span= "Gender:"
          %span= @student.gender_string
        .goal
          %span= "Goals:"
          - if @student.goals.length <= 0
            %span= "no goal"
          - else
            %span= @student.goals.length
    - if (!@user.is?(:parent))
      .action-link-container.pull-right
        .clearfix.action-link
          = link_to "Edit", url_for(:controller => "students", :action => 'edit', :id => @student.id, :user_id => @user.id, :admin_id => @admin)
        .clearfix.action-link
          = link_to "Users", "#", :id => "goto-users"

  = hidden_field_tag "student_id", params[:id]
  = hidden_field_tag "user_id", params[:user_id]
  = hidden_field_tag "admin_id", params[:admin_id]

- unless @goals.empty?
  .pull-right
    = link_to "Export", "#", :id => "export-button", :class => "btn export", "data-toggle" => "modal"
  .clearfix
  %center.clearfix
    = hidden_field_tag "check_is_add_grade", @data.empty?
    %iframe{:frameborder => "0", :height => @height, 
            :src => url_for(student_chart_charts_path(:student_id => @student, 
                                                      :user_id => @user, 
                                                      :admin_id => @admin)),
            :width => @width, 
            :id => "chart"}

.show-student
  .grade
    #render_add_grade
    - if @goals.size > 0
      .pull-right= link_to " Add Grade", new_grade_goals_path, :remote => true, :class => "btn", :id => "add-grade"
      .pull-right= link_to " Import Grades", initial_import_grades_goals_path, :remote => true, :class => "btn", :id => "import-grade"
    .clearfix
    .line
    #content-grade.clearfix
      = render "shared/students/view_goal", :goals => @goals, :student => @student
    #new-goal-container
  .separator.brown
    
  .users.student-users
    - if (!@user.is?(:parent))
      .action-container
        = link_to " Invite a user", new_invitation_path(:user_id => @user.id), :remote => true, :class => "icon-plus-sign add invite-user"

    -# Place holder for invitation form
    #render_invite_user.modal.hide.fade{"data-backdrop" => "static"}
      
    #content-users
      = render :partial => "shared/students/view_invited_user", :locals => {:invited_users => @invited_users, :read_only => @user.is?(:parent)}

  = render "export", :all_students => @all_students
